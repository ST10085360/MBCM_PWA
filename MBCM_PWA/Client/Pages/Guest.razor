@layout GuestLayout
@page "/guest"
@using MBCM_PWA.Client.Shared.Models
@using Microsoft.AspNetCore.Components.Web.Extensions
@using System.Net.Http.Json
@inject NavigationManager navigationManager
@inject HttpClient HttpClient

<PageTitle>Home</PageTitle>
<div class="main-container">
    <div class="splash-background">
        <div class="main-logo" style="margin-bottom: 20px;">
            <img class="logo" src="/css/MBCM_LOGO.png" alt="Logo"/>
            <h2>Welcome to the MBCM volunteer portal.</h2>
        </div>
    </div>
</div>

<div class="info-tile">
    <div class="text-center" >
        <p class="join-heading">Join Our Volunteer Community!</p>
        <p class="join-text">Ready to make a difference? Click here to register as a volunteer today!</p>
        <button class="btn btn-primary" style="margin-top: 20px; font-size: 25px;" @onclick="GoToRegisterPage">Register as Volunteer</button>
    </div>
</div>

<br>
<br>
<br>



@code {
    List<Project> projects = new List<Project>();

    // This method will be executed when the component is initialized
    protected override async Task OnInitializedAsync()
    {
        projects = await HttpClient.GetFromJsonAsync<List<Project>>("api/projects");
        var responseContent = await HttpClient.GetStringAsync("api/Projects");
        Console.WriteLine(responseContent);
    }

    private void GoToRegisterPage()
    {
        navigationManager.NavigateTo("/registerpage");
    }
}

