@layout WelcomeLayout
@page "/"
@using MBCM_PWA.Client.Shared.Models
@inject userService UserService

<PageTitle>Welcome</PageTitle>
<div class="text-center">
    <h1>Which one are you?</h1>

    <div class="row mt-4 justify-content-center">
        <div class="col-md-4">
            <div class="card welcome-card">
                <div class="card-body">
                    <h5 class="card-title">Guest</h5>
                    <p class="card-text">Click below if you are a guest.</p>
                    <a href="/guest" class="btn btn-welcome" onclick="@setGuest()">Choose Guest</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card welcome-card">
                <div class="card-body">
                    <h5 class="card-title">Volunteer</h5>
                    <p class="card-text">Click below if you are a volunteer.</p>
                    <a href="/loginpage" class="btn btn-welcome">Choose Volunteer</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card welcome-card">
                <div class="card-body">
                    <h5 class="card-title">Admin</h5>
                    <p class="card-text">Click below if you are an admin.</p>
                    <a href="/loginpage" class="btn btn-welcome">Choose Admin</a>
                </div>
            </div>
        </div>
    </div>
</div>
@code {
    private async Task setGuest()
    {
        UserService.SetUserType("Guest");
    }
}

<style>
    .welcome-card {
        background-color: #333F50;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
        border: none;
        border-radius: 8px;
        color: white;
        margin-bottom: 20px; /* Adjust as needed */
    }

        .welcome-card:hover {
            transform: scale(1.05); /* Enlarge the card on hover */
        }

    .btn-welcome {
        background-color: #2C3E50;
        color: white;
        border: none;
    }

        .btn-welcome:hover {
            background-color: #006699; /* Darker blue color on hover */
        }
</style>
