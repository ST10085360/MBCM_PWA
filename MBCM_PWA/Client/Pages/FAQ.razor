<style>

.container {
    max-width: 800px;
    margin: 0 auto;
}

.faq-accordion {
    border-radius: 5px;
    overflow: hidden;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    background-color: #fff;
}

.faq-item {
    border-bottom: 1px solid #ddd;
}

.faq-question {
    width: 100%;
    padding: 15px;
    background-color: #f5f5f5;
    text-align: left;
    border: none;
    outline: none;
    cursor: pointer;
    position: relative;
    font-weight: bold;
}

.faq-answer {
    display: none;
    padding: 10px 15px;
    background-color: #eee;
    font-size: 14px;
}

.faq-answer p {
    margin: 0;
}

.faq-question:focus {
    outline: none;
}

.icon {
    position: absolute;
    right: 15px;
    top: 50%;
    transform: translateY(-50%);
    transition: transform 0.3s ease;
}

.faq-question.active .icon {
    transform: translateY(-50%) rotate(45deg);
}

</style>



