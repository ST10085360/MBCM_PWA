
@page "/faq"
<PageTitle>FAQ</PageTitle>
<div class="container py-5">
    <h1 class="text-center mb-4">Frequently Asked Questions</h1>

    <div class="faq-accordion">
        @foreach (var faqItem in FAQContent)
        {
            <div class="faq-item">
                <button class="faq-question" onclick="toggleAccordion(this)">
                    @faqItem[0]
                    <span class="icon">&plus;</span>
                </button>
                <div class="faq-answer">
                    <p>@faqItem[1]</p>
                </div>
            </div>
        }
    </div>
</div>

@code {
    private List<string[]> FAQContent = new List<string[]>
    {
        new string[] { "Am I allowed to suggest a project as a guest?", "Not at first, but once you have completed the brief account registration to become a volunteer you are allowed to contribute to the suggested projects page by recommending a initiative of your choice." },
        new string[] { "How does ABC work?", "ABC works by..." },
        // Add more FAQ items as needed
        new string[] { "Can I do XYZ?", "Yes, you can..." },
        new string[] { "How do I get started?", "To get started..." },
        new string[] { "Is it free to use?", "Yes, it is..." },
        new string[] { "What are the benefits?", "The benefits include..." }
    };
}

